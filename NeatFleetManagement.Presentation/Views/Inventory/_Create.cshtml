@model CarViewModel


@using (Html.BeginForm("Create", "Inventory"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal inventory-add-new-item-panel">
    <div class="form-group col-md-3">
        <div class="col-md-12">
            @Html.EnumDropDownListFor(model => model.Condition, "Select condition", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Condition, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-3">
        <div class="col-md-12">
            @Html.EnumDropDownListFor(model => model.Color, "Select color", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-3">
        <div class="col-md-12">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Price" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-3">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
